<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <% messages.forEach(function(message) { %>
        <div CLASS="message-container">
            <span>Message: <%= message.text %></span>
            <span>User: <%= message.user %></span>
            <span>Date: <%= message.added.toDateString() %></span>
        </div>
    <% }); %>

<a href="/new"><button>Add Message</button></a>
</body>
</html>